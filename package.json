{
    "name": "angular-demo",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build",
        "webpack:server": "webpack --config server/webpack.config.js --progress --colors",
        "serve:prerender": "cd dist/browser && http-server",
        "serve:server": "node dist/server/start.js",
        "build:client-and-server-bundles": "ng build --prod && ng build --prod --app 1 --output-hashing=false",
        "build:client-and-server-bundles-dev": "ng build --prod && ng build --prod --app 1 --output-hashing=false",
        "build:client-and-server-bundles-staging": "ng build --prod && ng build --prod --app 1 --output-hashing=false",
        "build:client-and-server-bundles-prod": "ng build --prod && ng build --prod --app 1 --output-hashing=false",
        "build:server": "yarn run build:client-and-server-bundles && yarn run webpack:server",
        "build:server-dev": "yarn run build:client-and-server-bundles-dev && yarn run webpack:server",
        "build:server-staging": "yarn run build:client-and-server-bundles-staging && yarn run webpack:server",
        "build:server-prod": "yarn run build:client-and-server-bundles-prod && yarn run webpack:server",
        "deploy:dev": "serverless deploy --stage dev",
        "deploy:staging": "serverless deploy --stage staging",
        "deploy:prod": "serverless deploy --stage prod"
    },
    "dependencies": {
        "@angular/animations": "^5.2.8",
        "@angular/common": "^5.2.8",
        "@angular/compiler": "^5.2.8",
        "@angular/core": "^5.2.8",
        "@angular/forms": "^5.2.8",
        "@angular/http": "^5.2.8",
        "@angular/platform-browser": "^5.2.8",
        "@angular/platform-browser-dynamic": "^5.2.8",
        "@angular/platform-server": "^5.2.8",
        "@angular/router": "^5.2.8",
        "@angular/service-worker": "^5.2.8",
        "@nguniversal/express-engine": "^5.0.0-beta.6",
        "@nguniversal/module-map-ngfactory-loader": "^5.0.0-beta.6",
        "@types/aws-serverless-express": "^3.0.1",
        "aws-serverless-express": "^3.1.3",
        "copy-webpack-plugin": "^4.5.1",
        "core-js": "^2.5.3",
        "cors": "^2.8.4",
        "rxjs": "^5.5.6",
        "serverless": "^1.26.1",
        "serverless-webpack": "^5.0.0",
        "zone.js": "^0.8.20"
    },
    "devDependencies": {
        "@angular/cli": "^1.7.3",
        "@angular/compiler-cli": "^5.2.8",
        "@angular/language-service": "^5.2.8",
        "@types/node": "^9.4.7",
        "cpy-cli": "^1.0.1",
        "express": "^4.16.2",
        "http-server": "^0.11.1",
        "reflect-metadata": "^0.1.12",
        "serverless-domain-manager": "^2.3.4",
        "ts-loader": "^3.5.0",
        "typescript": "~2.6.2",
        "webpack": "^3.11.0",
        "webpack-merge": "^4.1.2",
        "webpack-node-externals": "^1.6.0"
    }
}
